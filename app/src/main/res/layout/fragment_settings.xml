<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="muryshkin.alexey.diseasediagnosis.Fragment.SettingsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="150dp"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Change Of Password"
                android:textSize="25dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edittext_design_fill_form"
                android:textColor="@color/colorPrimary"
                android:textCursorDrawable="@drawable/cursor_design_color"
                android:hint="Old Password"
                android:textColorHint="#90FF5722"
                android:inputType="textPassword"
                android:id="@+id/oldPasswordEditText"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edittext_design_fill_form"
                android:textColor="@color/colorPrimary"
                android:textCursorDrawable="@drawable/cursor_design_color"
                android:hint="New Password"
                android:textColorHint="#90FF5722"
                android:inputType="textPassword"
                android:id="@+id/newPasswordEditText"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edittext_design_fill_form"
                android:textColor="@color/colorPrimary"
                android:textCursorDrawable="@drawable/cursor_design_color"
                android:hint="Repeat New Password"
                android:textColorHint="#90FF5722"
                android:inputType="textPassword"
                android:id="@+id/repeatNewPasswordEditText"
                />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_design_login"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="Save"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:id="@+id/saveButton"
        />

    </RelativeLayout>

</FrameLayout>
